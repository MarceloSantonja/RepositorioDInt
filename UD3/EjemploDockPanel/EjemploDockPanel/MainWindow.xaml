<Window x:Class="EjemploDockPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EjemploDockPanel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <!-- LastChildFill ajusta si el ultimo hijo se queda o no el espacio sobrante -->
        <Button Content="botón 1" DockPanel.Dock="Top"></Button>
        <Button Content="botón 2" DockPanel.Dock="Left"></Button>
        <Button Content="botón 3" DockPanel.Dock="Bottom"></Button>
        <Button Content="botón 4" DockPanel.Dock="Right"></Button>
        <Button Content="botón 5"></Button> <!-- el ultimo hijo se queda todo el tamaño -->
    </DockPanel>
</Window>
