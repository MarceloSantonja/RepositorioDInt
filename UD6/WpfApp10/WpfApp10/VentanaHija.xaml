<Window x:Class="WpfApp10.VentanaHija"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="VentanaHija" Height="450" Width="800"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        >
    <StackPanel>
        <TextBlock Text="{Binding Path=Mensaje}"></TextBlock>
        <Button x:Name="AceptarButton" Click="AceptarButton_Click" IsDefault="True">Aceptar</Button>
        <Button IsCancel="True">Cancelar</Button>
    </StackPanel>
</Window>
