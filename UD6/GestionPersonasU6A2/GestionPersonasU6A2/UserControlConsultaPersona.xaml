<UserControl x:Class="GestionPersonasU6A2.UserControlConsultaPersona"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionPersonasU6A2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel >
        <TextBlock Margin="10,15,10,0"
                   Text="Nombre" />
        <TextBox Margin="10,0,10,0"
                 Text="{Binding Path=PersonaSeleccionada.Nombre}" />
        <TextBlock Margin="10,15,10,0"
                   Text="Edad" />
        <TextBox Margin="10,0,10,0"
                 Text="{Binding Path=PersonaSeleccionada.Edad}" />
        <TextBlock Margin="10,15,10,0"
                   Text="Nacionalidad" />
        <TextBox Margin="10,0,10,0"
                 Text="{Binding Path=PersonaSeleccionada.Nacionalidad}" />
      
            </StackPanel>
</UserControl>
