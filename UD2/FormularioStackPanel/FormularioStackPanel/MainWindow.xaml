<Window x:Class="FormularioStackPanel.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FormularioStackPanel"
        mc:Ignorable="d"
        Title="Formulario Stack Panel" Height="450" Width="800" Icon=".\assets\128.ico">
    <StackPanel>

        <StackPanel  >
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF07991A" Offset="0.008"/>
                    <GradientStop Color="#FFFBFBFB" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>


            <TextBlock Text="Nombre" Margin="10"  />
            <TextBox Margin="10,0,10,10"/>
        </StackPanel>
        
        <StackPanel>
            <TextBlock Text="Dirección" />
            <TextBox />
        </StackPanel>
        <StackPanel>
            <TextBlock Text="Correo electrónico" />
            <TextBox />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="Aceptar"></Button>
            <Button Content="Aceptar"></Button>
        </StackPanel>


    </StackPanel>
</Window>
