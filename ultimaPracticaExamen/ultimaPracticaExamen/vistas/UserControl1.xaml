<UserControl x:Class="ultimaPracticaExamen.vistas.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ultimaPracticaExamen.vistas"
             xmlns:vistamodelo="clr-namespace:ultimaPracticaExamen.VistaModelo"
             d:DataContext="{d:DesignInstance Type=vistamodelo:UserControl1VM}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="TextAlignment"
                    Value="Center" />
        </Style>
        
        
    </UserControl.Resources>
    <DockPanel>
        <TextBlock  DockPanel.Dock="Top" Text="{Binding Path=ComponenteSeleccionado.Nombre}" />
        <TextBlock Text="hola" />
        <TextBlock DockPanel.Dock="Bottom"
                   Text="{Binding Path=ComponenteSeleccionado.Precio}" />
        <TextBlock Text="{Binding Path=ComponenteSeleccionado.Foto}" />
    </DockPanel>
</UserControl>
